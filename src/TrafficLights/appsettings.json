{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "TrafficLightSettings": {
    "TickDelay": 1000,
    "Durations": {
      "DefaultActiveDuration": 20,
      "DefaultRestDuration": 4,
      "DefaultWarningDuration": 5,
      "DefaultAlternativeDuration": 10,
      "PeakLongActiveDuration": 40,
      "PeakShortActiveDuration": 10
    },
    "PeakTimes": {
      "AM": {
        "Start": "08:00",
        "Duration": "02:00"
      },
      "PM": {
        "Start": "17:00",
        "Duration": "02:00"
      }
    },
    "DefaultSequence": [
      {
        "Order": 1,
        "Name": "North <-> South",
        "DurationName": "DefaultActiveDuration",
        "ActiveLights": {
          "SouthToNorthActive": true,
          "NorthToSouthActive": true
        }
      },
      {
        "Order": 2,
        "Name": "South -> North + East",
        "DurationName": "DefaultAlternativeDuration",
        "ActiveLights": {
          "SouthToNorthActive": true,
          "SouthToEastActive": true
        }
      },
      {
        "Order": 3,
        "Name": "Rest",
        "DurationName": "DefaultRestDuration"
      },
      {
        "Order": 4,
        "Name": "East <-> West",
        "DurationName": "DefaultActiveDuration",
        "ActiveLights": {
          "EastToWestActive": true,
          "WestToEastActive": true
        }
      },
      {
        "Order": 5,
        "Name": "Rest",
        "DurationName": "DefaultRestDuration"
      }
    ],
    "PeakSequence": [
      {
        "Order": 1,
        "Name": "North <-> South",
        "DurationName": "PeakLongActiveDuration",
        "ActiveLights": {
          "SouthToNorthActive": true,
          "NorthToSouthActive": true
        }
      },
      {
        "Order": 2,
        "Name": "South -> North + East",
        "DurationName": "DefaultAlternativeDuration",
        "ActiveLights": {
          "SouthToNorthActive": true,
          "SouthToEastActive": true
        }
      },
      {
        "Order": 3,
        "Name": "Rest",
        "DurationName": "DefaultRestDuration"
      },
      {
        "Order": 4,
        "Name": "East <-> West",
        "DurationName": "PeakShortActiveDuration",
        "ActiveLights": {
          "EastToWestActive": true,
          "WestToEastActive": true
        }
      },
      {
        "Order": 5,
        "Name": "Rest",
        "DurationName": "DefaultRestDuration"
      }
    ]
  }
}
